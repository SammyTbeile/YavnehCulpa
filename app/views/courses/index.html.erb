<h1> Listing Courses by Department</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Professor</th>
        <th>Recommended?</th>
        <th>Added by</th>
        <th>Notes</th>
    </tr>

    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.professor %></td>
        <td><%= course.recommended %></td>
        <td><%= course.adder %></td>
        <td><%= course.notes %></td>
        <td><%= link_to 'Show', course_path(course) %></td>
      </tr>
    <% end %>
</table>
